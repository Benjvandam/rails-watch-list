<h1><%= @list.name %></h1>
<h2>Movies Associated with this list:</h2>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product my-3">
      <img src='<%= bookmark.movie.poster_url %>'/>
      <div class="d-flex justify-content-between">
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p>Comment about the movie: <strong><%= bookmark.comment %></strong></p>
        </div>
        <div>
          <%= link_to "Delete Movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to List Overview", lists_path, class: "btn btn-primary" %>
